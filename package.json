{
  "name": "banner-card",
  "version": "0.11.0",
  "main": "index.js",
  "author": "Raymond Julin <raymond.julin@gmail.com>",
  "description": "A fluffy banner card for Home Assistant",
  "license": "MIT",
  "scripts": {
    "test": "ava",
    "build": "NODE_ENV=production rollup -c"
  },
  "dependencies": {
    "lit-element": "^2.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/register": "^7.10.3",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@ava/babel-preset-stage-4": "^4.0.0",
    "ava": "^3.9.0",
    "husky": "^4.2.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "release-it": "^12.3.5",
    "rollup": "^2.18.0",
    "rollup-plugin-filesize": "^9.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-minify-html-literals": "^1.2.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^6.1.0",
    "tracker-json": "^1.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "tracker-json": {
    "banner-card": {
      "repo": "nervetattoo/banner-card",
      "file": "banner-card.js",
      "resolve": "gh:release"
    }
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "banner-card.*"
      ]
    },
    "hooks": {
      "after:bump": "npx tracker-json",
      "before:init": "yarn build",
      "after:release": "rm banner-card.js"
    }
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ]
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  }
}
